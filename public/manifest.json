{
  "manifest_version": 3,
  "name": "PopupTasks",
  "version": "2.0.0",
  "description": "To-do list flutuante em qualquer site.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
